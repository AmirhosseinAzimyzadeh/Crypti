<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/main_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorGreenBar"/>
                    <RelativeLayout
                        android:id="@+id/help_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_help_black_24dp"
                            android:layout_centerInParent="true"
                            android:alpha="0.4"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/setting_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_help_black_24dp"
                            android:layout_centerInParent="true"
                            android:alpha="0.4"/>
                    </RelativeLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:id="@+id/circle_info_image"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/circle_info"/>
        <LinearLayout
            android:layout_marginTop="95dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/key_input_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_rectangle_back">

                <EditText
                    android:id="@+id/key_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimary"
                    android:hint="Write a Valid Key"
                    android:inputType="textShortMessage"
                    android:maxLength="200"
                    android:maxLines="1" />
                <ImageView
                    android:id="@+id/key_image"
                    android:alpha="0.6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_vpn_key_black_24dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_back">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/header">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Input"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/input_from_user"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="37dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/colorPrimary"
                    android:hint="paste a Encrypted text or write something ... "
                    android:textColor="#ffff"
                    android:alpha="0.5"
                    android:textColorHint="#ffff"
                    android:textSize="14dp"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/output_relative_layout"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_back">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/header">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Output"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/output_text_view"
                    android:gravity="center"
                    android:layout_marginTop="37dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffff"
                    android:alpha="0.5"
                    android:text=""
                    android:editable="false"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/decrypting_button"
                        android:layout_marginRight="3.5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/round_rectangle_back">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Decrypting"
                            android:layout_centerInParent="true"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/encrypting_button"
                        android:layout_marginLeft="3.5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/round_rectangle_back">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Encrypting"
                            android:layout_centerInParent="true"
                            android:textSize="18dp"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        </RelativeLayout>
</android.support.constraint.ConstraintLayout>